{
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#a80404",  // Red title bar
    "titleBar.inactiveBackground": "#880303",  // Darker red for inactive
    "activityBar.background": "#720707",  // Red activity bar on the side
    "editor.background": "#1a1919",  // Dark theme background (adjust as needed)
    "statusBar.background": "#03a00b",  // Green status bar
    "statusBar.foreground": "#ffffff",  // White text for readability
    "sideBar.background": "#141414"
  },
  "files.autoSave": "afterDelay",  // Optional: auto-save for better experience
  "window.zoomLevel": 0,  // Optional: adjust zoom for your workspace
  "java.configuration.updateBuildConfiguration": "automatic",
  "cmake.sourceDirectory": "X:/ITM/Movil/Proyecto/poquidax/poquidax/linux",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string",
        "settings": {
          "foreground": "#f53948" // Custom color for strings (orange in this case)
        }
      },
      {
        "scope": "comment",
        "settings": {
          "foreground": "#238623" // Custom color for comments (green in this case)
        }
      },
      {
        "scope": "entity.name.class",
        "settings": {
          "foreground": "#FF6347"  // Custom color for classes
        }
      },
      {
        "scope": "entity.name.class.dart",
        "settings": {
          "foreground": "#FF5733" // Custom color for classes like Widget
        }
      },
      {
        "scope": "entity.name.type.class.dart",
        "settings": {
          "foreground": "#33C1FF" // Custom color for state classes like _LoginViewState
        }
      },
      {
        "scope": "support.class.dart",
        "settings": {
          "foreground": "#ff8800"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#f7f322"  // Custom color for methods/functions
        }
      }
    ]
  }
}
